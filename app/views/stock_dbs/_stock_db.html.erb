<div class="container">
  <div class="panel panel-primary filterable">
    <div class="panel-heading">
      <h3 class="panel-title">出入库记录</h3>
      <div class="pull-right">
        <div class="row">
          <div class="col-sm-5">
            <%= form_tag export_stock_dbs_path, :method => :get do %>
                <%= hidden_field_tag :complete_time, params[:complete_time] %>
                <%= hidden_field_tag :client_name, params[:client_name] %>
                <%= hidden_field_tag :product_code, params[:product_code] %>
                <%= hidden_field_tag :product_name, params[:product_name] %>
                <%= hidden_field_tag :standard, params[:standard] %>
                <%= hidden_field_tag :kind, params[:kind] %>
                <%= hidden_field_tag :supplier, params[:supplier] %>
                <%= hidden_field_tag :export_num, params[:export_num] %>
                <%= button_tag(type: "submit", class: "btn btn-default btn-xs") do %>
                    <span class="glyphicon glyphicon-floppy-save"></span> 导出
                <% end %>
            <% end %>
          </div>
          <div class="col-sm-5">
            <button id="filter" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-filter"></span>
              筛选
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="panel-body" style="min-height:750px">
      <table class="table table-responsive table-condensed table-hover">
        <thead>
        <tr class="filters">
          <th><input type="text" class="form-control" placeholder="发货完成时间" disabled></th>
          <th><input type="text" class="form-control" placeholder="分公司名称" disabled></th>
          <th><input type="text" class="form-control" placeholder="物料代码" disabled></th>
          <th><input type="text" class="form-control" placeholder="物料名称" disabled></th>
          <th><input type="text" class="form-control" placeholder="规格" disabled></th>
          <th><input type="text" class="form-control" placeholder="铁塔物资类别" disabled></th>
          <th><input type="text" class="form-control" placeholder="供应商" disabled></th>
          <th><input type="text" class="form-control" placeholder="发货数量" disabled></th>
        </tr>
        </thead>

        <tbody>

        <% @stock_dbs.each do |dbs| %>
            <tr>
              <td>
                <text style="font-size: small"><%= dbs.complete_time %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.client_name %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.product_code %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.product_name %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.standard %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.kind %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.supplier %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.export_num %></text>
              </td>
            </tr>
        <% end %>

        </tbody>
      </table>

      <%= will_paginate @stock_dbs, :param_name => 'page',
                        :previous_label => t("前一页"), :next_label => t("后一页"), :inner_window => 1 %>


      <!--<%#= will_paginate @supplier_dbs, :param_name => 'page',-->
                          <!--:previous_label => t("前一页"), :next_label => t("后一页"), :inner_window => 1 %>-->

    </div>
  </div>
</div>

<div class="modal fade" id="filter_modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div id="filter-header">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4><span class="glyphicon glyphicon-filter"></span> 筛选</h4>
        </div>
      </div>
      <div class="modal-body" style="padding:30px 50px;">

        <%= form_tag stock_dbs_path, :method => 'get', role: 'form', class: "form-horizontal" do %>
            <div class="form-group">
              <%= label_tag :complete_time, "发货时间", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :complete_time, params[:complete_time], placeholder: "输入发货完成时间", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :client_name, "分公司", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :client_name, params[:client_name], placeholder: "输入分公司名称", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :product_code, "物料编码", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :product_code, params[:product_code], placeholder: "输入物料编码", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :product_name, "物料名称", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :product_name, params[:product_name], placeholder: "输入物料名称", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :standard, "规格", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :standard, params[:standard], placeholder: "输入规格", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :kind, "物资类别", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :kind, params[:kind], placeholder: "输入铁塔物资类别", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :supplier, "供应商", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :supplier, params[:supplier], placeholder: "输入供应商", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :export_num, "发货数量", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :export_num, params[:export_num], placeholder: "输入发货数量", class: 'form-control' %>
              </div>
            </div>

            <div class="modal-footer">
              <%= button_tag(type: "submit", class: "btn btn-default btn-block") do %>
                  <span class="glyphicon glyphicon-search"></span>查找
              <% end %>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#filter").click(function () {
      $("#filter_modal").modal();
    });
  });
</script>