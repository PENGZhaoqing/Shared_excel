<div class="container">
  <div class="panel panel-primary filterable">
    <div class="panel-heading">
      <h3 class="panel-title">出入库记录</h3>
      <div class="pull-right">
        <div class="row">
          <div class="col-sm-5">
            <%= form_tag export_stock_dbs_path, :method => :get do %>
                <%= hidden_field_tag :product, params[:product] %>
                <%= hidden_field_tag :import_company, params[:import_company] %>
                <%= hidden_field_tag :import_num, params[:import_num] %>
                <%= hidden_field_tag :export_company, params[:export_company] %>
                <%= hidden_field_tag :export_num, params[:export_num] %>
                <%= button_tag(type: "submit", class: "btn btn-default btn-xs") do %>
                    <span class="glyphicon glyphicon-floppy-save"></span> 导出
                <% end %>
            <% end %>
          </div>
          <div class="col-sm-5">
            <button id="filter" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-filter"></span>
              筛选
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="panel-body" style="min-height:750px;max-height: 750px;overflow: scroll;">
      <table class="table table-responsive table-condensed table-hover">
        <thead>
        <tr class="filters">
          <th><input type="text" class="form-control" placeholder="产品" disabled></th>
          <th><input type="text" class="form-control" placeholder="供应公司" disabled></th>
          <th><input type="text" class="form-control" placeholder="供应数量" disabled></th>
          <th><input type="text" class="form-control" placeholder="输出公司" disabled></th>
          <th><input type="text" class="form-control" placeholder="输出数量" disabled></th>

        </tr>
        </thead>

        <tbody>

        <% @stock_dbs.each do |dbs| %>
            <tr>
              <td>
                <text style="font-size: small"><%= dbs.product %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.import_company %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.import_num %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.export_company %></text>
              </td>
              <td>
                <text style="font-size: small"><%= dbs.export_num %></text>
              </td>
            </tr>
        <% end %>

        </tbody>
      </table>

      <%= will_paginate @stock_dbs, :param_name => 'page',
                        :previous_label => t("前一页"), :next_label => t("后一页"), :inner_window => 1 %>


      <!--<%#= will_paginate @supplier_dbs, :param_name => 'page',-->
                          <!--:previous_label => t("前一页"), :next_label => t("后一页"), :inner_window => 1 %>-->

    </div>
  </div>
</div>

<div class="modal fade" id="filter_modal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div id="filter-header">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4><span class="glyphicon glyphicon-filter"></span> 筛选</h4>
        </div>
      </div>
      <div class="modal-body" style="padding:30px 50px;">

        <%= form_tag stock_dbs_path, :method => 'get', role: 'form', class: "form-horizontal" do %>
            <div class="form-group">
              <%= label_tag :product, "产品", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :product, params[:product], placeholder: "产品", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :import_company, "供应公司", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :import_company, params[:import_company], placeholder: "供应公司", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :import_num, "供应数量", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :import_num, params[:import_num], placeholder: "供应商", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :export_company, "输出公司", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :export_company, params[:export_company], placeholder: "输出公司", class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= label_tag :export_num, "输出数量", class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= text_field_tag :export_num, params[:export_num], placeholder: "输出数量", class: 'form-control' %>
              </div>
            </div>

            <div class="modal-footer">
              <%= button_tag(type: "submit", class: "btn btn-default btn-block") do %>
                  <span class="glyphicon glyphicon-search"></span>查找
              <% end %>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $("#filter").click(function () {
      $("#filter_modal").modal();
    });
  });
</script>