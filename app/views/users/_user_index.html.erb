<div class="panel panel-default">
  <div class="panel-heading">
    <i class="fa fa-users fa-fw"></i> 用户管理
  </div>
  <div class="panel-body" style="min-height: 450px">
    <h4 class="text-muted">所有用户</h4>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>姓名</th>
        <th>邮箱</th>
        <th>公司</th>
        <th>角色</th>
        <th>注册时间</th>
        <th></th>

      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.company %></td>
            <% if user.admin %>
                <td>管理员</td>
            <% else %>
                <td>普通</td>
            <% end %>
            <td><%= user.created_at.strftime("%Y/%m/%d") %></td>

            <% if !params[:users_page].blank? %>
                <td><%= link_to "编辑", users_path(user_id: user.id, users_page: params[:users_page].to_i), method: :get, class: 'btn-sm btn-info' %></td>
            <% else %>
                <td><%= link_to "编辑", users_path(user_id: user.id), method: :get, class: 'btn-sm btn-info' %></td>
            <% end %>
            <td><%= link_to "删除", user_path(user), method: :delete, class: 'btn-sm btn-danger' %></td>

          </tr>
      <% end %>
      </tbody>
    </table>

    <%= will_paginate @users, :param_name => 'users_page',
                      :previous_label => t("前一页"), :next_label => t("后一页"), :inner_window => 1 %>

    <hr>

    <% if !params[:user_id].blank? &&!@user.nil? %>
        <%= render 'edit_user' %>
    <% end %>

  </div>
</div>



